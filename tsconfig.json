{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "outDir": "lib/",
    "lib": [
      "ES2022"
    ],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["@types/bun"]
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
